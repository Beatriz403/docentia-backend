{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ejecutar Backend",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "main.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Ejecutar Frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        }
    ]
}